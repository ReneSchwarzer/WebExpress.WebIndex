<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebExpress.WebIndex.Studio.Controls.ToolButton">
    
    <Grid x:Name="Button" 
          WidthRequest="60"
          HeightRequest="50"
          HorizontalOptions="Center"
          VerticalOptions="Center">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTapped" NumberOfTapsRequired="1"/>
            <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
        </Grid.GestureRecognizers>
        <StackLayout Orientation="Vertical"
                     HorizontalOptions="Center"
                     VerticalOptions="Center">
            <Label FontFamily="FAS" Text="{Binding Icon}" FontSize="12" TextColor="{DynamicResource Primary}" HorizontalOptions="Center" />
            <Label Text="{Binding Text}" FontSize="12" TextColor="{DynamicResource Primary}" HorizontalOptions="Center" />
        </StackLayout>
    </Grid>
    
</ContentView>
