<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="WebExpress.WebIndex.Studio.Views.ObjectTypeConfigView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout>
        <Label FontSize="Large" Text="Object properties" />

        <Label Margin="2" Text="Name:" />
        <Entry
            x:Name="Name"
            Margin="2"
            Placeholder="enter name"
            Text="{Binding Name}" />


        <Label Margin="2" Text="Description:" />
        <Editor
            x:Name="Description"
            Margin="2"
            HeightRequest="187"
            Placeholder="enter description"
            Text="{Binding Description}" />

    </StackLayout>

</ContentView>
