<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebExpress.WebIndex.Studio.Views.ObjectPropertyView">

    
    <StackLayout>
        <Label Text="Object properties" FontSize="Large" />

        <Label Text="Name:" Margin="2"/>
        <Entry x:Name="Name" Placeholder="enter name" Margin="2" Text="{Binding Name}" />


        <Label Text="Description:" Margin="2" />
        <Editor x:Name="Description" Placeholder="enter description" Margin="2" HeightRequest="187" Text="{Binding Description}"/>
        
    </StackLayout>
    
</ContentView>
